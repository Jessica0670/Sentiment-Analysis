<% include head.ejs%>


    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-3">
            <div class="well" style="height: 550px;">
              <center>
                <h3>
                    <a style="margin-left:15px;margin-right:15px" >
                      <img style="width:150px; border-radius: 10px; margin-bottom: 20px;" src="/assets/markz.jpg" />
                    </a>

                  </span>Mark Zuckerberg
                </h3>
                <h4 style="position: center">CEO</h4>
                </center>

                <a href="/unlink/local" class="btn btn-default">Unlink</a>
            </div>
        </div>


        <div class="col-sm-9">
            <div class="well" style="height: 550px; overflow: scroll;">
              <div id='root'></div>
              <script src="/dist/bundle.js"></script>
              <ul style="list-style-type:none; margin-right: 30px;">
                <% let arr = renderData.reverse() %>
              <% for(var i = 0; i < arr.length; i++){ %>
                <% arr = Array.from(new Set(arr)) %>
               <%  arr.sort(function(a, b) { return - ( b.id - a.id)}); %>
                <% if(arr.length > 10) { %>
                  <% arr.splice(0, 1) %>
                <% } %>
                <li style="margin-top: 15px;
                padding: 10px;
                -webkit-box-shadow: 0 7px 4px #777;
                -moz-box-shadow: 0 7px 4px #777;
                box-shadow: 0 7px 4px #777;
                background-color: white;">
                <b><%= arr[i].username %></b>
                <br>
                <p><%= arr[i].message %></p>

                <i style="font-weight: 200; font-size: 12px;"><%= arr[i].time %></i>
              </li>
                <% } %>
              </ul>

            </div>

        </div>
<% include foot.ejs%>
